{% extends '_layout' %}
{% set title = entry.title %}

{% block content %}
    <div class="flex bg-orange-100 max-w-screen-lg mx-auto py-4">
        <div class="w-2/3">
            {% set image = entry.heroImage.one() %}
            {% if image %}
                <img
                    src="{{ image.url('newsFull') }}"
                    class=""
                    alt="Primary image of article"
                >
            {% endif %}
            <h1 class="font-bold text-3xl">{{ entry.title }}</h1>
            <p class="font-bold">{{ entry.postDate|date('F j, Y') }}</p>
            {% include '_panels' with {'matrix': entry.panels} only %}
        </div>
        <div class="w-1/3">
            {% include '_sidebars/news' only %}
        </div>
    </div>
{% endblock %}
